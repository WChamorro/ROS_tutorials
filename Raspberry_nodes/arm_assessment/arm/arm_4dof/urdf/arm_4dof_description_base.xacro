<?xml version="1.0"?>
<robot name="arm_4dof" xmlns:xacro="http://www.ros.org/wiki/xacro">

	<!-- Parametros DH -->
	<!--Joint   a       d      alpha   theta -->
	<!--J1      0       0.05   0       theta1 -->
	<!--J2      0.05    0.20   pi/2    theta2 -->
	<!--J3      0.25   -0.05   0       theta3 -->
	<!--J4      0.20    0.05   0       theta4 -->
	<!--Tip     0.05    0     -pi/2    0 -->
	

       
       <!-- referencia world -->
 
	<link name="world"/>
	
	<joint name="j0" type="fixed">
		<parent link="world"/>
		<child link="base_link"/>
	</joint>
	
	
	<link name="base_link">
	
		<visual>
			<geometry>
				<cylinder length="0.05" radius="0.1"/>
			</geometry>
			<material name="black">
				<color rgba="0.0 0.0 0.0 0.7"/>
			</material>
			<origin rpy="0 0 0" xyz="0 0 0.025"/> 
		</visual>
		
		<collision>
			<geometry>
				<cylinder length="0.05" radius="0.1"/>
			</geometry>
			<origin rpy="0 0 0" xyz="0 0 0.025"/> 
		</collision>
		
		<inertial>
			<mass value="1.0"/>
			<origin rpy="0 0 0" xyz="0 0 0.025"/>
			<inertia ixx="0.0027" iyy="0.0027" izz="0.005" ixy="0" ixz="0" iyz="0"/>
		</inertial>
	</link>
	
	
	<!--J1      0       0.05   0       theta1 -->
	<joint name="j1" type="revolute">
		<axis xyz="0 0 1"/>
		<parent link="base_link"/>
		<child link="torso"/>
		<origin rpy="0 0 0" xyz="0 0 0.05"/>
		<limit velocity="1.0" effort="2.0" upper="1.5708" lower="-1.5708"/>
	</joint>

	
	<link name="torso">
	
		<visual>		
			<geometry>
				<cylinder length="0.2" radius="0.025"/>
			</geometry>
			<material name="blue">
				<color rgba="0.0 0.0 1.0 0.6"/>
			</material>
			<origin rpy="0 0 0" xyz="0.0 0.0 0.1"/>
		</visual>
		<collision>
			<geometry>
				<cylinder length="0.2" radius="0.025"/>
			</geometry>
			<origin rpy="0 0 0" xyz="0.0 0.0 0.1"/>
		</collision>
		
		<inertial>
			<mass value="1.0"/>
			<origin rpy="0 0 0" xyz="0 0 0.1"/>
			<inertia ixx="0.02146" iyy="0.02146" izz="0.00125" ixy="0" ixz="0" iyz="0"/>
		</inertial>
	</link>


       <!--J2      0    0.20   pi/2    theta2 -->
	<joint name="j2" type="revolute">
		<axis xyz="0 0 1"/>	
		<parent link="torso"/>
		<child link="upper_arm"/>
		<origin rpy="1.5708 0 0" xyz="0.0 0 0.20"/>
		<limit velocity="1.0" effort="2.0" upper="1.5708" lower="-0.7853"/>
	</joint>	
	
	<link name="upper_arm">
	
		<visual>
			<geometry>
				<cylinder length="0.25" radius="0.025"/>
			</geometry>
			<material name="red">
				<color rgba="1.0 0.0 0.0 0.6"/>
			</material>
			<origin rpy="0 1.5708 0" xyz="0.125 0 0.0"/>
		</visual>
		<collision>
			<geometry>
				<cylinder length="0.25" radius="0.025"/>
			</geometry>
			<origin rpy="0 1.5708 0" xyz="0.125 0 0.0"/>
		</collision>
		
		<inertial>
			<mass value="1.0"/>
			<origin rpy="0 1.5708 0" xyz="0.125 0 0.0"/>
			<inertia ixx="0.01396" iyy="0.01396" izz="0.00125" ixy="0" ixz="0" iyz="0"/>
		</inertial>
	</link>

	<!--J3      0.25   -0.05   0       theta3 -->
	<joint name="j3" type="revolute">
		<axis xyz="0 0 1"/>
		
		<parent link="upper_arm"/>
		<child link="lower_arm"/>
		<origin rpy="0 0 0" xyz="0.25 0.0 -0.05"/>
		<limit velocity="1.0" effort="30.0" upper="0.7853" lower="-0.7853"/>
	</joint>	

	<link name="lower_arm">
		<inertial>
			<mass value="1.0"/>
			<origin rpy="0 1.5708 0" xyz="0.1 0 0"/>
			<inertia ixx="0.01396" iyy="0.01396" izz="0.00125" ixy="0" ixz="0" iyz="0"/>
		</inertial>
		<visual>
			<geometry>
				<cylinder length="0.2" radius="0.025"/>
			</geometry>
			<material name="blue">
				<color rgba="0.7 0.7 0.7 0.6"/>
			</material>
			<origin rpy="0 1.5708 0" xyz="0.1 0 0"/>
		</visual>
		<collision>
			<geometry>
				<cylinder length="0.2" radius="0.025"/>
			</geometry>
			<origin rpy="0 1.5708 0" xyz="0.1 0 0"/>
		</collision>
	</link>

       <!--J4      0.20    0.05   0       theta4 -->
	<joint name="j4" type="revolute">
		<axis xyz="0 0 1"/>
		<parent link="lower_arm"/>
		<child link="hand"/>
		<origin rpy="0 0 0" xyz="0.2 0.0 0.05"/>
		<limit velocity="1.0" effort="30.0" upper="0.7853" lower="-0.7853"/>
	</joint>

	<link name="hand">
		<inertial>
			<mass value="1.0"/>
			<inertia ixx="0.00042" iyy="0.00042" izz="0.00042" ixy="0" ixz="0" iyz="0"/>
		</inertial>
		<visual>
			<geometry>
				<box size="0.05 0.05 0.05"/>
			</geometry>
			<material name="green">
				<color rgba="0.0 1.0 0.0 0.6"/>
			</material>
			<origin rpy="1.5708 0 0" xyz="0.025 0 0"/>
		</visual>
		<collision>
			<geometry>
				<box size="0.05 0.05 0.05"/>
			</geometry>
		</collision>
	</link>

	<!--Tip     0.05    0     -pi/2    0 -->
	<joint name="tip" type="fixed">
		<origin rpy="-1.5708 0 0" xyz="0.05 0.0 0.0"/>
		<parent link="hand"/>
		<child link="end"/>
	</joint>
	
	<link name="end"/>
	

  
	
</robot>
